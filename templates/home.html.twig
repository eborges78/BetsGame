{% extends "base.html.twig" %}

{% block body %}
    <form action="{{ path('home.save') }}" method="POST" enctype="application/x-www-form-urlencoded">
    <input type="hidden" id="_token" value="sdfdsfds" />
    <div class="container">
        <div class="row" style="width:100%">
            <h1>Pronostics Sportifs {{ competition.label }}</h1>
            <button type="submit" class="btn btn-success" style="float:right">Enregistrer</button>
        </div>
        {% for phase in competition.phases %}
            <div class="container" style="display:block;margin-top:20px;">
                <div class="row">
                    <br />
                    <h3>{{ phase.label }}</h3>
                </div>
                <div class="row">
                    {% for event in phase.events %}
                        {% include 'event.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
    </form>
{% endblock %}